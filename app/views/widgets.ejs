<% include header.ejs %>
<% var img = 'http://octodex.github.com/images/daftpunktocat-thomas.gif' %>
<% var link = 'https://oss.krasniyrus.com/users/' + loggedUser.username %>
<% var alt = 'Open Source Supporter' %>
<section id="page-settings">
	<form class="form-horizontal" role="form" method="post">
		<fieldset class="col-6">
			<legend>
				Open Source Authors
			</legend>
			<div class="form-group">
				<label for="input-md" class="col-4 control-label">MarkDown:</label>

				<div class="col-6">
					<textarea id="input-md" cols="30" rows="10" class="form-control">[![Open Source Supporter](<%= img %>)](<%= link %>)</textarea>
				</div>
			</div>

			<div class="form-group">
				<label for="input-html" class="col-4 control-label">HTML:</label>

				<div class="col-6">
					<textarea id="input-html" cols="30" rows="10" class="form-control"><a href="<%= link %>"><img src="<%=img%>" alt="<%= alt %>"/></a></textarea>
				</div>
			</div>

		</fieldset>
		<fieldset class="col-6">
			<legend>
				Supporters
			</legend>
			<div class="form-group">
				<label for="input-html-logo" class="col-4 control-label">HTML:</label>

				<div class="col-6">
					<textarea id="input-html-logo" cols="30" rows="10" class="form-control"><a href="<%= link %>"><img src="<%=img%>" alt="<%= alt %>"/></a></textarea>
				</div>
			</div>
		</fieldset>
	</form>
</section>
<script type="text/javascript" src="<%= jsPath %>vendors/requirejs/js/require.js"></script>
<script type="text/javascript" src="<%= jsPath %>require.config.js"></script>
<script type="text/javascript">
	require.config({
		baseUrl: "<%=jsPath %>"
	})

	require(['modules/user-settings/main'])
</script>
<% include footer.ejs %>

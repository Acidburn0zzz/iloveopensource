<% if (!_.isEmpty(contributions)) { %>
<% if (contributions.paypal) { %>
<div class="contribution paypal">
	<%- contributions.paypal %>
</div>
<% } %>
<% if (contributions.gittip) { %>
<div class="contribution gittip" data-toggle="tooltip" title="donate on Gittip">
	<a href="https://www.gittip.com/<%= contributions.gittip %>/">gittip</a>
</div>
<% } %>
<% if (contributions.gittip) { %>
<div class="contribution flattr" data-toggle="tooltip" title="donate on Flattr">
	<a href="https://flattr.com/profile/<%= contributions.flattr %>/things"><img src="https://flattr.com/_img/icons/flattr_logo_16.png" alt="flattr"/></a>
</div>
<% } %>
<% if (contributions.note) { %>
<div class="contribution other note-from-author" data-toggle="tooltip" title="comment from an author">
	<div data-toggle="modal">
		<i class="icon-info-sign"></i>
	</div>
	<div class="hidden content">
		<%- contributions.note %>
	</div>
</div>
<% } %>
<% if (contributions.emailMe) { %>
<div class="contribution email-me email-to-author" data-toggle="tooltip" title="send a comment to the author">
	<i class="icon-envelope" data-toggle="modal" data-target="#email-to-author"></i>
</div>
<% } %>
<% if (contributions.code) { %>
<div class="contribution code">
	<a href="<%= projectUrl %>" target="_blank">
		<i class="icon-code" data-toggle="tooltip" title="Contribute some code"></i>
	</a>
</div>
<% } %>
<div class="clearfix"></div>
<% } else { %>
Would like to contribute something?
<% } %>